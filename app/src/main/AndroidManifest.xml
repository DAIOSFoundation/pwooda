<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="true" />
    
    <!-- Android 15 16KB 메모리 페이지 크기 지원 -->
    <uses-feature android:name="android.hardware.ram.large" android:required="false" />
    
    <!-- 태블릿 지원 -->
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true" />

    <application
        android:name=".AppContextHolder"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Neulpum"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <activity
            android:name=".presentation.activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Neulpum"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.ChatActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.PrivacyPolicyActivity"
            android:exported="false"
            android:label="개인정보처리방침"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.TermsOfServiceActivity"
            android:exported="false"
            android:label="이용약관"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.OrganizationActivity"
            android:exported="false"
            android:label="기관"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.ProfileEditActivity"
            android:exported="false"
            android:label="프로필 수정"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.AccountSectionActivity"
            android:exported="false"
            android:label="계정 관리"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.ChangePasswordActivity"
            android:exported="false"
            android:label="비밀번호 변경"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.PromptActivity"
            android:exported="false"
            android:label="개인화"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.VoiceChatSettingsActivity"
            android:exported="false"
            android:label="음성채팅 설정"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.VoiceDetectionSettingsActivity"
            android:exported="false"
            android:label="음성 감지 설정"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
        
        <activity
            android:name=".presentation.activity.VoiceSettingsActivity"
            android:exported="false"
            android:label="음성 설정"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:theme="@style/Theme.Neulpum">
        </activity>
    </application>

</manifest>